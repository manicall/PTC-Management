<Window x:Class="PTC_Management.Windows.CreateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views = "clr-namespace:PTC_Management.Views" 
        xmlns:viewModels = "clr-namespace:PTC_Management.ViewModel" 
        xmlns:local="clr-namespace:PTC_Management.Windows"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModels:EmployeeCreateViewModel}">
            <views:EmployeeCreateView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <ContentControl Content="{Binding }" />
    </Grid>
</Window>
