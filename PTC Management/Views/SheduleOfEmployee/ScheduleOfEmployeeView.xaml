<UserControl x:Class="PTC_Management.Views.ScheduleOfEmployeeView"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:h="clr-namespace:PTC_Management.ViewModel.Helpers" 
       xmlns:viewmodel="clr-namespace:PTC_Management.ViewModel" xmlns:converter="clr-namespace:PTC_Management.Model.Converter"
             d:DataContext="{d:DesignInstance Type=viewmodel:ScheduleOfEmployeeViewModel}"
       mc:Ignorable="d" 
       d:DesignHeight="450" d:DesignWidth="800">

  <UserControl.Resources>

    <converter:CellColorConverter x:Key="CellColorConverter" />
    <converter:CellAligmentConverter x:Key="CellAligmentConverter" />
    <Style x:Key="CellHighlighterStyle">

      <Style.Triggers>
        <Trigger Property="DataGridCell.IsSelected" Value="True" >
          <Setter Property="DataGridCell.BorderThickness" Value="3" />
          <Setter Property="DataGridCell.BorderBrush" Value="Blue" />
        </Trigger>

      </Style.Triggers>

      <Setter Property="DataGridCell.Background">
        <Setter.Value>
          <MultiBinding UpdateSourceTrigger="PropertyChanged"
                Converter="{StaticResource CellColorConverter}" >
            <MultiBinding.Bindings >
              <Binding UpdateSourceTrigger="PropertyChanged" RelativeSource="{RelativeSource Self}"/>
              <Binding UpdateSourceTrigger="PropertyChanged" Path="Row"/>

            
            </MultiBinding.Bindings>
          </MultiBinding>
        </Setter.Value>
      </Setter>

      <Setter Property="TextBlock.TextAlignment">
        <Setter.Value>
          <MultiBinding UpdateSourceTrigger="PropertyChanged"
                Converter="{StaticResource CellAligmentConverter}" >
            <MultiBinding.Bindings >
              <Binding UpdateSourceTrigger="PropertyChanged" RelativeSource="{RelativeSource Self}"/>
              <Binding UpdateSourceTrigger="PropertyChanged" Path="Row" Mode="TwoWay"/>

            </MultiBinding.Bindings>
          </MultiBinding>
        </Setter.Value>
      </Setter>

      <Setter Property="DataGridCell.MinHeight" Value="22"/>
      <Setter Property="DataGridCell.MinWidth" Value="22"/>
      <Setter Property="DataGridCell.BorderThickness" Value="1" />
      <Setter Property="DataGridCell.BorderBrush" Value="Black" />
      <Setter Property="DataGridCell.Foreground" Value="Black"></Setter>
      <Setter Property="DataGridCell.Margin" Value="-0.5 -0.5 -0.5 -0.5"></Setter>
    </Style>
  
    <Style TargetType="Button" x:Key="ButtonStyle">
      <Setter Property="Margin" Value="5,0,0,0" />
      <Setter Property="Width" Value="130" />
      <Setter Property="Height" Value="23" />
    </Style>

  </UserControl.Resources>

  <DockPanel>
    <StackPanel DockPanel.Dock="Top" Margin="5,5,0,5" Orientation="Horizontal">
      <DatePicker 
        Focusable="False"
        Text="{Binding DatePickerValue, Mode=TwoWay}"
        h:DatePickerCalendar.IsMonthYear="True"    
        h:DatePickerDateFormat.DateFormat="MM/yyyy"/>

      <Button 
        Margin="35,0,0,0"
        Style="{StaticResource ButtonStyle}"
        Command="{Binding SelectEmployees}"
        Content="Добавить сотрудников" /> 
      
      <Button 
        Style="{StaticResource ButtonStyle}"
        Command="{Binding RemoveEmployee}"
        Content="Убрать сотрудников" />
    </StackPanel>


    <StackPanel DockPanel.Dock="Top" Margin="0,5,0,5" Orientation="Horizontal">
      <Button 
        Background="LimeGreen"
        Style="{StaticResource ButtonStyle}"
        Command="{Binding SetStatus}"
        CommandParameter = "{Binding Status.Working}"
        Content="Должен работать" />

      <Button 
        Background="DarkGray"
        Style="{StaticResource ButtonStyle}"
        Command="{Binding SetStatus}"
        CommandParameter = "{Binding Status.Free}"
        Content="Свободен" />

      <Button 
        Background="DeepPink"
        Style="{StaticResource ButtonStyle}"
        Command="{Binding SetStatus}"
        CommandParameter="{Binding Status.NoWorking}"
        Content="Не хочет работать" />

      <Button 
        Background="DeepSkyBlue"
        Style="{StaticResource ButtonStyle}"
        Command="{Binding SetStatus}"
        CommandParameter ="{Binding Status.Vacation}"
        Content="Отпуск/больничный" />
    </StackPanel>

    <GroupBox Grid.Column="2" Header="График">
      <h:ScheduleDataGrid 
        CellStyle="{StaticResource CellHighlighterStyle}" 
        ItemsList = "{Binding ItemsList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }"
        ColumnHeaderStyle="{StaticResource CenterGridHeaderStyle}"
        SelectedCellsList="{Binding SelectedCells, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }"
        SelectionMode="Extended"
        SelectionUnit="Cell"
        CanUserResizeColumns="False"
        CanUserSortColumns="False"
        CanUserReorderColumns="False"
        AutoGenerateColumns="True" 
        MinRowHeight="20"
        CanUserAddRows="False"
        CanUserDeleteRows="False"
        DataContext="{Binding }" 
        IsReadOnly="True"
        GridLinesVisibility="None"
        ItemsSource="{Binding ScheduleTable, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">

      </h:ScheduleDataGrid>



    </GroupBox>

  </DockPanel>
</UserControl>
