<UserControl x:Class="PTC_Management.Views.EmployeeDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PTC_Management.Views"
             xmlns:views = "clr-namespace:PTC_Management.Views" 
             xmlns:viewModels = "clr-namespace:PTC_Management.ViewModel" 
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="350">

    <UserControl.Resources>

        <DataTemplate DataType="{x:Type viewModels:DialogViewModel}">
            <views:EmployeeDialogView />
        </DataTemplate>

        <Style x:Key="CenterGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="TextBlockStyle">
            <Setter Property="Width" Value="170"/>
        </Style>

        <Style TargetType="TextBox" x:Key="TextBoxStyle">
            <Setter Property="Width" Value="150"/>
        </Style>

        <Style TargetType="StackPanel" x:Key="StackPanelStyle">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Orientation" Value="Horizontal"/>
        </Style>
    </UserControl.Resources>
    
    <StackPanel Margin="10,0,10,10">
        <StackPanel Style="{StaticResource StackPanelStyle}">
            <Button Name="buttonWriteAndClose" Style="{StaticResource BlackButton }" Margin="0 0 35 0" Width="auto" Click="buttonWrite_Click">Записать и закрыть</Button>
            <Button Name="buttonWrite" Style="{StaticResource BlackButton }" >Записать</Button>
            <Button Name="buttonClose" Style="{StaticResource BlackButton }" >Закрыть</Button>
        </StackPanel>
        <StackPanel Style="{StaticResource StackPanelStyle}">
            <TextBlock Name="textBlockSurname" Style="{StaticResource TextBlockStyle}">Фамилия</TextBlock>
            <TextBox Name="textBoxSurname" Style="{StaticResource TextBoxStyle}" 
                     Text="{Binding SelectedItem.Surname, UpdateSourceTrigger=Explicit}"></TextBox>
        </StackPanel>
        <StackPanel Style="{StaticResource StackPanelStyle}">
            <TextBlock Name="textBlockName" Style="{StaticResource TextBlockStyle}">Имя</TextBlock>
            <TextBox Name="textBoxName" Style="{StaticResource TextBoxStyle}"
                     Text="{Binding SelectedItem.Name, UpdateSourceTrigger=Explicit}"></TextBox>
        </StackPanel>
        <StackPanel Style="{StaticResource StackPanelStyle}">
            <TextBlock Name="textBlockMiddleName" Style="{StaticResource TextBlockStyle}">Отчество</TextBlock>
            <TextBox Name="textBoxMiddleName" Style="{StaticResource TextBoxStyle}"
                     Text="{Binding SelectedItem.Patronymic, UpdateSourceTrigger=Explicit}"></TextBox>
        </StackPanel>
        <StackPanel Style="{StaticResource StackPanelStyle}">
            <TextBlock Name="textBlockDriverLicense" Style="{StaticResource TextBlockStyle}">Водительское удостоверение</TextBlock>
            <TextBox Name="textBoxDriverLicense" Style="{StaticResource TextBoxStyle}"
                     Text="{Binding SelectedItem.DriverLicense, UpdateSourceTrigger=Explicit}"></TextBox>
        </StackPanel>
        
        
    </StackPanel>

</UserControl>
