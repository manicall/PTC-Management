<ResourceDictionary
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:views = "clr-namespace:PTC_Management.Views" 
          xmlns:viewModels = "clr-namespace:PTC_Management.ViewModel" 
          >
  <DataTemplate DataType = "{x:Type viewModels:EmployeeViewModel}">
    <views:EmployeeView/>
  </DataTemplate>

  <DataTemplate DataType = "{x:Type viewModels:RouteViewModel}">
    <views:RouteView/>
  </DataTemplate>

  <DataTemplate DataType = "{x:Type viewModels:TransportViewModel}">
    <views:TransportView/>
  </DataTemplate>

  <DataTemplate DataType = "{x:Type viewModels:ItineraryViewModel}">
    <views:ItineraryView/>
  </DataTemplate>
  
  <DataTemplate DataType = "{x:Type viewModels:ScheduleOfEmployeeViewModel}">
    <views:ScheduleOfEmployeeView/>
  </DataTemplate>
  
</ResourceDictionary>